generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          String @id @default(uuid())
  
  first_name  String?
  last_name   String?
  userId      String
  email       String?
  profile_img String?

  links       Link[]      @relation("UserToLink")

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

}

model Link{
  id          String        @id @default(uuid())
  userId      String
  user        User          @relation("UserToLink", fields: [userId], references: [id])
  platformId  String
  platform    PlatformType  @relation("PlatformTypeToLink", fields: [platformId], references: [id])
  link        String        //url
  orderKey    Int           //1-5
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt


  @@index([userId])
  @@index([platformId])
}

model PlatformType {
  id          String      @id @default(uuid())
  platform    String
  links       Link[]      @relation("PlatformTypeToLink")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}